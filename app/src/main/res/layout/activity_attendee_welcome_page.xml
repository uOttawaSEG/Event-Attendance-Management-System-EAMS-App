<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendeeWelcomePage">

    <TextView
        android:id="@+id/welcomeAfterSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to EAMS"
        android:textSize="30sp"
        android:layout_marginTop="@dimen/default_top_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeMessageType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="You are logged in as an Attendee"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeAfterSignIn" />


    <Button
        android:id="@+id/buttonSearchForEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for Events"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeMessageType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/buttonRegistrationRequests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Registration Requests"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSearchForEvents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/buttonSignOutAttendee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#C32222"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="8sp"
        android:text="Sign Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>