<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrganizerWelcomePage">

    <TextView
        android:id="@+id/welcomeAfterSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to EAMS"
        android:textSize="30sp"
        android:layout_marginTop="@dimen/default_top_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeMessageType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="You are logged in as an Organizer"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeAfterSignIn" />


    <Button
        android:id="@+id/buttonCreateEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeMessageType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/buttonUpcomingEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming Events"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonCreateEvents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonPastEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Past Events"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonUpcomingEvents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/buttonSignOutOrganizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#C32222"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="8sp"
        android:text="Sign Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
